	public static void olaElectric()
	{
		Scanner m=new Scanner(System.in);
		System.out.println("==========================================================================================");
	ArrayList lk=new ArrayList();
	lk.add("1 for Ola S1");
	lk.add("2 for Ola S1 Pro1");
	System.out.println(lk);
	System.out.println("==========================================================================================");
	int ch=m.nextInt();
	if(ch<3)
	{
		switch(ch)
		{
		case 1: s1();
		break;
		case 2: s1Pro();
		break;
		default : System.out.println("Please choose right key");
		break;
		}
	}
	}
	public static void s1() {
		xyz.color();
		xyz.purchase();
		System.out.println("Please Enter OTP");
		Scanner m=new Scanner(System.in);
		int otp=m.nextInt();
		if(otp!=33445544)
		{
			System.out.println("==========================================================================================");
			System.out.println("===== Thank you for Purchasing Ola S1 ==========");
		}
	}
