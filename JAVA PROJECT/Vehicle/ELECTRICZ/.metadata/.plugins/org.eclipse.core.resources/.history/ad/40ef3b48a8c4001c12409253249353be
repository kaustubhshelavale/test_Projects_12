	public  void bike() 
	{
		Scanner m=new Scanner(System.in);
		System.out.println("==========================================================================================");
	ArrayList lk=new ArrayList();
	lk.add("1 for Revolt Motors");
	lk.add("2 for Tork Motors");
	lk.add("3 for Odysse Electric");
	lk.add("4 for Komaki Motors");
	lk.add("5 for Cyborg Bikes");
	lk.add("6 for Kabira Mobility");
	lk.add("7 for Oben EV");
	System.out.println(lk);
	System.out.println("==========================================================================================");
	int ch=m.nextInt();
	
	if(ch<8)
	{
		switch(ch)
		{
		case 1: revoltMotors();
		break;
		case 2: torkMotors();
		break;
		case 3: odysseElectric();
		break;
		case 4: komakiMotors();
		break;
		case 5: cyborgBikes();
		break;
		case 6: kabiraMobility();
		break;
		case 7: obenEv();
		break;
		default : System.out.println("Please choose right key");
		break;
		}
	}
	else if(ch>8)
	{
		System.out.println("please choose correct option");
		System.out.println("===========================================================");
		System.out.println(lk);
		System.out.println("===========================================================");
		int n=m.nextInt();
		switch(n)
		{
		case 1: revoltMotors();
		break;
		case 2: torkMotors();
		break;
		case 3: odysseElectric();
		break;
		case 4: komakiMotors();
		break;
		case 5: cyborgBikes();
		break;
		case 6: kabiraMobility();
		break;
		case 7: obenEv();
		break;
		default : System.out.println("Please choose right key");
		break;
		}
	}
	}

	
