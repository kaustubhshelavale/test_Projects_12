		break;
		}
	}
	}
	public  void rv400() {
		
		color();
		purchase();
		System.out.println("Please Enter OTP");
		Scanner m=new Scanner(System.in);
		int otp=m.nextInt();
		if(otp!=33445544)
		{
		System.out.println("==========================================================================================");
		System.out.println("===== Thank you for Purchasing Revolt RV 400 ==========");
		}driver();
	}
