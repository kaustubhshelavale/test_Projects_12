package electricz;

import java.util.ArrayList;
import java.util.Scanner;

public class FourWheeler extends Electricz 
{
	public static void fourWheeler()
	{
		Scanner m=new Scanner(System.in);
		System.out.println("==========================================================================================");
	ArrayList lk=new ArrayList();
	lk.add("1 for Scooter ");
	lk.add("2 for bike ");
	lk.add("3 for Bicycle");
	lk.add("4 for Compact Scooter");
	lk.add("5 for Hoverboard");
	System.out.println(lk);
	System.out.println("==========================================================================================");
	
	int ch=m.nextInt();
	
	if(ch<4)
	{
		switch(ch)
		{
		case 1: System.out.println("method for 4wheeler");
		break;
		case 2: System.out.println("method for Threewheeler");
		break;
		case 3: System.out.println("method for Threewheeler");
		break;
		default : System.out.println("Please choose right key");
		break;
		}
	}
	else if(ch>3)
	{
		System.out.println("please choose correct option");
		System.out.println("===========================================================");
		System.out.println(lk);
		System.out.println("===========================================================");
		int n=m.nextInt();
		switch(n)
		{
		case 1: System.out.println("method for Threewheeler");
		break;
		case 2: System.out.println("method for Threewheeler");
		break;
		case 3: System.out.println("method for Threewheeler");
		break;
		default : System.out.println("Please choose right key");
		break;
		}

	}
	else if(ch>3)
	{
		System.out.println("please choose correct option");
		System.out.println("===========================================================");
		System.out.println(lk);
		System.out.println("===========================================================");
		int n=m.nextInt();
		switch(n)
		{
		case 1: System.out.println("method for Threewheeler");
		break;
		case 2: System.out.println("method for Threewheeler");
		break;
		case 3: System.out.println("method for Threewheeler");
		break;
		default : System.out.println("Please choose right key");
		break;
		}
	}
	}

